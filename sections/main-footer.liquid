{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-main-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color | default: '#1a1a1a' }};
    color: {{ section.settings.text_color | default: '#999999' }};
  }

  .footer h3,
  .footer .dropdown-label {
    color: {{ section.settings.heading_color | default: '#ffffff' }};
  }

  .footer h3::after,
  .footer .dropdown-label::after {
    background-color: {{ section.settings.heading_color | default: '#ffffff' }};
  }

  .footer a {
    color: {{ section.settings.link_color | default: '#999999' }};
  }

  .footer a:hover {
    color: {{ section.settings.link_hover_color | default: '#ffffff' }};
  }

  .newsletter-form button {
    background-color: {{ section.settings.button_color | default: '#e32b2b' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
  }

  .toggle {
    background-color: {{ section.settings.toggle_color | default: '#3b82f6' }};
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer section-{{ section.id }}-padding">
  <div class="footer-container page-width">
    {%- if section.blocks.size > 0 -%}
      <div class="footer-columns">
        {%- for block in section.blocks -%}
          {%- if block.type == 'link_list' and block.settings.menu != blank -%}
            <div class="footer-column" {{ block.shopify_attributes }}>
              <input type="checkbox" id="footer-menu-toggle-{{ forloop.index }}" class="dropdown-toggle">
              <label for="footer-menu-toggle-{{ forloop.index }}" class="dropdown-label">{{ block.settings.heading }}</label>
              <h3>{{ block.settings.heading }}</h3>
              <ul>
                {%- for link in block.settings.menu.links -%}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {%- endfor -%}
                {%- if block.settings.show_privacy_toggle -%}
                  <li>
                    <div class="privacy-toggle">
                      <div class="toggle"></div>
                      <a href="{{ block.settings.privacy_link | default: '#' }}">{{ block.settings.privacy_text | default: 'Your Privacy Choices' }}</a>
                    </div>
                  </li>
                {%- endif -%}
              </ul>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.newsletter_enable -%}
      <div class="newsletter">
        <h3>{{ section.settings.newsletter_heading }}</h3>
        <p>{{ section.settings.newsletter_text }}</p>
        {%- form 'customer', id: 'ContactFooter', class: 'newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input type="email" name="contact[email]" placeholder="{{ 'newsletter.label' | t }}" required>
          <button type="submit" name="commit">âž”</button>
          {%- if form.errors -%}
            <div class="newsletter-form__message form__message" id="ContactFooter-error">
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </div>
          {%- endif -%}
          {%- if form.posted_successfully? -%}
            <div class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>
              {{- 'newsletter.success' | t }}
            </div>
          {%- endif -%}
        {%- endform -%}
      </div>
    {%- endif -%}

    <div class="footer-bottom">
      {%- if section.settings.show_social and section.settings.social_icons_enable -%}
        <div class="social-icons">
          {%- if settings.social_facebook_link != blank -%}
            <a href="{{ settings.social_facebook_link }}" aria-label="Facebook">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9.19795 21.5H13.198V13.4901H16.8021L17.198 9.50977H13.198V7.5C13.198 6.94772 13.6457 6.5 14.198 6.5H17.198V2.5H14.198C11.4365 2.5 9.19795 4.73858 9.19795 7.5V9.50977H7.19795L6.80206 13.4901H9.19795V21.5Z"></path>
              </svg>
            </a>
          {%- endif -%}
          {%- if settings.social_twitter_link != blank -%}
            <a href="{{ settings.social_twitter_link }}" aria-label="Twitter/X">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
              </svg>
            </a>
          {%- endif -%}
          {%- if settings.social_instagram_link != blank -%}
