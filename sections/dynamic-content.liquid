{% comment %}
  Dynamic Content Section
  A flexible section that allows adding multiple content types as blocks
{% endcomment %}

<div class="dynamic-content-section">
  {% for block in section.blocks %}
    <div class="dynamic-content-block" {{ block.shopify_attributes }}>
      {% case block.type %}
        {% when 'image_with_text' %}
          <div class="image-text-block">
            {% if block.settings.image != blank %}
              <div class="image-container">
                {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
              </div>
            {% endif %}
            <div class="text-container">
              {% if block.settings.heading != blank %}
                <h2>{{ block.settings.heading }}</h2>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="text">{{ block.settings.text }}</div>
              {% endif %}
              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <a href="{{ block.settings.button_link }}" class="button">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </div>
          
        {% when 'collection_preview' %}
          <div class="collection-preview-block">
            {% if block.settings.heading != blank %}
              <h2>{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.collection != blank %}
              <div class="collection-products">
                {% assign collection = collections[block.settings.collection] %}
                {% assign limit = block.settings.product_limit | default: 4 %}
                {% for product in collection.products limit: limit %}
                  <div class="product-card">
                    <a href="{{ product.url }}">
                      {% if product.featured_image != blank %}
                        {{ product.featured_image | image_url: width: 400 | image_tag: loading: 'lazy' }}
                      {% endif %}
                      <h3>{{ product.title }}</h3>
                      <p class="price">{{ product.price | money }}</p>
                    </a>
                  </div>
                {% endfor %}
              </div>
            {% endif %}
          </div>
          
        {% when 'text_column' %}
          <div class="text-column-block">
            {% if block.settings.heading != blank %}
              <h2>{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.content != blank %}
              <div class="text-content">{{ block.settings.content }}</div>
            {% endif %}
          </div>
          
        {% when 'video' %}
          <div class="video-block">
            {% if block.settings.heading != blank %}
              <h2>{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.video_url != blank %}
              <div class="video-container">
                {% if block.settings.video_url contains "youtube.com" or block.settings.video_url contains "youtu.be" %}
                  <iframe src="{{ block.settings.video_url | replace: 'watch?v=', 'embed/' }}" frameborder="0" allowfullscreen></iframe>
                {% elsif block.settings.video_url contains "vimeo.com" %}
                  <iframe src="{{ block.settings.video_url | replace: 'vimeo.com', 'player.vimeo.com/video' }}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                {% endif %}
              </div>
            {% endif %}
          </div>
          
        {% when 'custom_html' %}
          <div class="custom-html-block">
            {{ block.settings.custom_html }}
          </div>
      {% endcase %}
    </div>
  {% endfor %}
  
  {% if section.blocks.size == 0 %}
    <div class="placeholder-container">
      <div class="placeholder-content">
        <p>Add blocks to customize this section.</p>
      </div>
    </div>
  {% endif %}
</div>

<style>
  .dynamic-content-section {
    margin-bottom: 40px;
  }
  
  .dynamic-content-block {
    margin-bottom: 40px;
  }
  
  .image-text-block {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 30px;
  }
  
  .image-text-block .image-container,
  .image-text-block .text-container {
    flex: 1 1 45%;
    min-width: 300px;
  }
  
  .collection-preview-block .collection-products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }
  
  .product-card {
    text-align: center;
  }
  
  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
  }
  
  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  .placeholder-container {
    padding: 60px;
    text-align: center;
    border: 2px dashed #ddd;
    background: #f9f9f9;
  }
  
  @media screen and (max-width: 768px) {
    .image-text-block {
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Dynamic Content",
  "tag": "section",
  "class": "dynamic-content-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Add different content blocks below to build your custom page."
    }
  ],
  "blocks": [
    {
      "type": "image_with_text",
      "name": "Image with Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Image with Text"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post.</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    },
    {
      "type": "collection_preview",
      "name": "Collection Preview",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Featured Collection"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "range",
          "id": "product_limit",
          "min": 2,
          "max": 12,
          "step": 1,
          "default": 4,
          "label": "Products to show"
        }
      ]
    },
    {
      "type": "text_column",
      "name": "Text Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Text Column"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Use this text to share information about your brand or products.</p>"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Video"
        },
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL",
          "info": "YouTube or Vimeo URL"
        }
      ]
    },
    {
      "type": "custom_html",
      "name": "Custom HTML",
      "settings": [
        {
          "type": "html",
          "id": "custom_html",
          "label": "Custom HTML",
          "default": "<div style='text-align: center; padding: 20px;'><p>Add your custom HTML here</p></div>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dynamic Content",
      "category": "Custom Content",
      "blocks": [
        {
          "type": "image_with_text"
        },
        {
          "type": "collection_preview"
        }
      ]
    }
  ]
}
{% endschema %} 