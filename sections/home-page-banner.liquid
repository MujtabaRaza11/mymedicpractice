{% comment %}
  Home Page Banner Section
  Displays a promotional banner with text and CTA button over an image background.
{% endcomment %}

{%- liquid
  assign section_id = 'home-page-banner-' | append: section.id
  assign background_image = section.settings.background_image
  assign top_text = section.settings.top_text
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
-%}

<style>
  #{{ section_id }} {
    --banner-text-color: {{ section.settings.text_color }};
    --banner-overlay-color: {{ section.settings.overlay_color }};
    --banner-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --button-background-color: {{ section.settings.button_background_color }};
    --button-text-color: {{ section.settings.button_text_color }};
  }
  
  .home-page-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
    height: 590px;
  }
  
  .home-page-banner__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .home-page-banner__background img {
    height: 100%;
    object-fit: cover;
    max-height: 590px;
    max-width: 1920px;
    width: 100%;
    object-position: center center;
    opacity: {{ section.settings.overlay_opacity }}%;
  }
  
  .home-page-banner__background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--banner-overlay-color);
    opacity: var(--banner-overlay-opacity);
    z-index: 2;
  }
  
  .home-page-banner__content {
    position: absolute;
    z-index: 3;
    padding: 2rem 3rem;
    max-width: max-content;
    bottom: 0;
    left: 5%;
    top: 18%;
  }
  
  .home-page-banner__top-text {
    font-size: 20px;
    font-weight: 500;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: var(--banner-text-color);
  }
  
  .home-page-banner__heading {
    font-size: 96px;
    font-weight: 600;
    line-height: 1.1;
    margin: 0 auto;
    color: var(--banner-text-color);
  }
  
  .home-page-banner__subheading {
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 2rem;
    color: var(--banner-text-color);
  }
  
  .home-page-banner__button {
    padding: 6px 50px;
    text-align: center;
    font-size: 40px;
    display: flex;
    font-weight: 600;
    justify-content: center;
    text-transform: uppercase;
    background-color: var(--button-background-color);
    color: var(--button-text-color);
    text-decoration: none;
    transition: opacity 0.3s ease;
    width: 320px;
  }
  
  .home-page-banner__button:hover {
    opacity: 0.9;
  }

  @media screen and (min-width: 768px) and (max-width: 1199px) {

    .home-page-banner__top-text {
        font-size: 16px;
    }

    .home-page-banner__heading {
        font-size: 65px;
    }

    .home-page-banner__subheading {
        font-size: 20px;
    }

    .home-page-banner__button {
        width: 250px;
        font-size: 25px;
    }

    .home-page-banner__content {
        align-content: center;
    }
  }
  
  @media screen and (max-width: 768px) {
    .home-page-banner__top-text {
        font-size: 14px;
    }

    .home-page-banner__heading {
      font-size: 60px;
    }
    
    .home-page-banner__subheading {
        font-size: 16px;
    }

    .home-page-banner__button {
        width: 192px;
        font-size: 20px;
        padding: 8px 40px;
    }
    
    .home-page-banner {
      height: 590px;
    }
    
    .home-page-banner__content {
        padding: 1.5rem;
        align-items: flex-start;
        display: flex;
        flex-direction: column;
        justify-content: center;
        top: 40%;
    }
    
    
  }
</style>

<div id="{{ section_id }}" class="home-page-banner">
  <div class="home-page-banner__background">
    {% if background_image != blank %}
      {{
        background_image
        | image_url: width: 2000
        | image_tag: loading: 'lazy', widths: '400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000', class: ''
      }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <div class="home-page-banner__background-overlay"></div>
  </div>

  <div class="home-page-banner__content">
    {% if top_text != blank %}
      <div class="home-page-banner__top-text">{{ top_text }}</div>
    {% endif %}

    {% if heading != blank %}
      <h2 class="home-page-banner__heading">{{ heading }}</h2>
    {% endif %}

    {% if subheading != blank %}
      <p class="home-page-banner__subheading">{{ subheading }}</p>
    {% endif %}

    {% if button_text != blank and button_link != blank %}
      <a href="{{ button_link }}" class="home-page-banner__button">
        {{ button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Home Page Banner",
  "tag": "section",
  "class": "section-home-page-banner",
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Background Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Background Overlay Opacity",
      "default": 30
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Text",
      "default": "SAVE UP TO 50% OFF"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Summer Sale"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Earn up to $100 in free gifts + free shipping"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#D9322E"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Home Page Banner",
      "category": "Promotional",
      "settings": {
        "top_text": "SAVE UP TO 50% OFF",
        "heading": "Summer Sale",
        "subheading": "Earn up to $100 in free gifts + free shipping",
        "button_text": "SHOP NOW",
        "overlay_opacity": 30,
        "text_color": "#FFFFFF",
        "button_background_color": "#D9322E",
        "button_text_color": "#FFFFFF"
      }
    }
  ]
}
{% endschema %} 